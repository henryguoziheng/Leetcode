def longestSubstring(s):
    maxVal = 0
    i = 0
    Ind = 0

    start = 0
    count = 1
    while i < len(s) - 1:
        start = i
        while i < len(s) - 1 and s[i] == s[i + 1]:
            i += 1
            count += 1
        if count > maxVal:
            maxVal = count
            Ind = start
        i += 1
        count = 1
    return Ind, maxVal, s[Ind : (Ind + maxVal)]

s = 'bbaabbbbcccccc'
print (longestSubstring(s))
